{
  "name": "id.webmaker.org",
  "version": "1.0.0",
  "description": "OAuth 2.0 identity provider for Webmaker https://id.webmaker.org",
  "main": "index.js",
  "scripts": {
    "serve": "PORT=1234 node web/index.js",
    "start": "parallelshell \"npm run serve\" \"npm run watch-css\" \"npm run watch-js\"",
    "test": "lab -t 95 && npm run validate && npm run test:browser",
    "test:browser": "npm run build && mocha-phantomjs -s loadImages=false public/tests/index.html",
    "build:js": "webpack --config webpack.config.js --progress --profile --colors",
    "build:testassets": "ncp node_modules/mocha/mocha.js public/tests/mocha.js && ncp node_modules/mocha/mocha.css public/tests/mocha.css",
    "build": "npm run build:testassets && npm run build:js",
    "watch-css": "autoless --source-map templates/less public",
    "watch-js": "npm run build:js -- --watch",
    "jshint": "jshint  lib test web *.js",
    "jscs": "jscs lib test web *.js",
    "js-beautify": "js-beautify  lib test web *.js -r ",
    "validate": "npm run jshint && npm run jscs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/id.webmaker.org"
  },
  "keywords": [
    "OAuth",
    "webmaker",
    "id.webmaker.org",
    "login"
  ],
  "author": "Webmaker",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/id.webmaker.org/issues"
  },
  "homepage": "https://github.com/mozilla/id.webmaker.org",
  "dependencies": {
    "boom": "^2.6.1",
    "bootstrap": "^3.3.4",
    "es5-shim": "^4.1.0",
    "font-awesome": "^4.3.0",
    "hapi": "^8.4.0",
    "hoek": "^2.11.1",
    "hyperquest": "^1.0.1",
    "joi": "^6.0.8",
    "react": "^0.12.2",
    "react-router": "^0.12.4",
    "react-validation-mixin": "^4.0.3"
  },
  "devDependencies": {
    "autoless": "^0.1.6",
    "bulk-require": "^0.2.1",
    "code": "^1.3.0",
    "imports-loader": "^0.6.3",
    "js-beautify": "^1.5.5",
    "jscs": "^1.11.3",
    "jshint": "^2.6.3",
    "json-loader": "^0.5.1",
    "jsx-loader": "^0.12.2",
    "lab": "^5.5.0",
    "less": "^2.4.0",
    "mocha": "^2.2.1",
    "mocha-phantomjs": "^3.5.3",
    "mofo-style": "latest",
    "ncp": "^2.0.0",
    "parallelshell": "^1.1.1",
    "phantomjs": "^1.9.16",
    "react-router-stub": "0.0.5",
    "should": "^5.2.0",
    "sinon": "git://github.com/cjohansen/Sinon.JS#b672042043517b9f84e14ed0fb8265126168778a",
    "webpack": "^1.7.3"
  }
}
